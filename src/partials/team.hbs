<!--team-->
{{#with team}}
    <a id="team" class="in-page-link"></a>
    {{#unless noHeading}}
        <section class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="uppercase mb16">{{{heading}}}</h2>
                    {{#if content}}<p class="lead mb64">{{{content}}}</p>{{/if}}
                </div>
            </div>
    {{/unless}}
        <!--<div class="container team-xs visible-xs">-->
        <!--</div>-->
        <div class="container">
            <div class="team row text-center {{#if contentCenter}}content-center{{/if}}">
                {{#if showAll}}
                    {{#each @root.teamMembers}}
                        {{#ifNotIn this.name ../doNotShow}}
                            {{> teamMember flip = ../flip}}
                        {{/ifNotIn}}
                    {{/each}}
                {{else}}
                    {{#each teamMembers}}
                        {{#each @root.teamMembers}}
                            {{#ifEquals this.name ../this}}
                                {{> teamMember flip = ../../flip small = ../../small}}
                            {{/ifEquals}}
                        {{/each}}
                    {{/each}}
                {{/if}}
            </div>
        </div>
    {{#if meetTeam}}
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 text-center btn-banner">
                        <a class="btn btn-white btn-filled btn-lg"
                           href="{{#relativePath @file.path "/team.html"}}{{/relativePath}}">Meet The Team!</a>
                    </div>
                </div>
            </div>
    {{/if}}
    {{#unless noHeading}}
        </section>
    {{/unless}}
{{/with}}
<!--endteam-->
