<div class="pricing-table pt-1 text-center emphasis">
    <h5 class="uppercase">
        {{#if registerBoxHeading}}
            {{{registerBoxHeading}}}
        {{else}} {{#if priceCut}}
            <span class="slashed-price"> ₹{{{priceCut}}} </span>
        {{else}}
            Regular Batch
        {{/if}} {{/if}}
    </h5>
    {{#if price}}
        <span class="price">₹{{{price}}}</span>
        <p class="lead">{{{lectures}}}</p>
    {{else}}
        {{#each @root.coursesList}}
            {{#ifEquals id @root.id}}
                <span class="price">₹{{{price}}}</span>
                <p class="lead">{{{lectures}}}</p>
            {{/ifEquals}}
        {{/each}}
        {{#each @root.bootcampsList}}
            {{#ifEquals id @root.id}}
                <span class="price">₹{{{price}}}</span>
                <p class="lead">{{{lectures}}}</p>
            {{/ifEquals}}
        {{/each}}
    {{/if}}
    {{#if registerButton}}
        {{#with registerButton}}
			{{#if buttonLink}}
				<a id="ifOnlineCourse" class="btn btn-white btn-lg" href="{{{buttonLink}}}"
               {{#ifEquals disabled true}}disabled{{/ifEquals}}>{{{buttonText}}}</a>
			{{else}}
				<a id="ifOnlineCourse" class="btn btn-white btn-lg" href="#register{{#if registerIdSlug}}{{{registerIdSlug}}}{{/if}}"
				   {{#ifEquals disabled true}}disabled{{/ifEquals}}>{{{buttonText}}}</a>
			{{/if}}
        {{/with}}
    {{else}}
        <a id="ifOnlineCourse" class="btn btn-white btn-lg" href="#register">Enroll Now</a>
    {{/if}}
    <p>
        <a href="/contactus">Contact Us</a>
        <br>Call(Toll-free): 1800-2744-504
    </p>
</div>
