<script>
    $(function () {
        $('.flip-card').flip({
            axis: 'y',
            trigger: 'hover'
        }).waypoint(function (direction) {
            $(this.element).flip(direction == 'down');
        }, {
            offset: '40%'
        })
    })
</script>

{{#if schedule}}
    <script>
        var dates = $('.calendar .date-time');

        $.each(dates, function (index, date) {
            if (new Date(date.getAttribute('datetime')).getTime() < new Date().getTime()) {
                $(date).parents('tr').find('.fa').toggleClass('past');
            }
        })
    </script>
{{/if}}
<script>
    if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register("{{#relativePath @file.path '/sw.js'}}{{/relativePath}}")
                .catch(function (err) {
                    console.log(err);
                })
    }
</script>
