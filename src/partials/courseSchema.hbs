<script type="application/ld+json">
{
    "@context": "http://schema.org",
    "@type": "Course",
    "name": "{{{title}}}",
    {{#each metas}}
    {{#ifEquals this.name "description"}}
            "description": "{{this.content}}",
        {{/ifEquals}}
{{/each}}
    "provider": {
        "@type": "Organization",
        "name": "Coding Blocks",
        "sameAs": [
            "https://www.linkedin.com/company-beta/3804916/",
            "https://twitter.com/CodingBlocksIN",
            "https://plus.google.com/u/0/+Codingblocks",
            "https://www.facebook.com/codingblocksindia/"
        ]
    },
    "aggregateRating": {
        "@type": "AggregateRating",
    {{#with reviews}}
    "ratingValue": "{{{ratingValue}}}",
    "ratingCount": "{{{ratingCount}}}",
    "reviewCount": "{{{reviewCount}}}"
    {{/with}}
    }
}
</script>

<script type="application/ld+json">
{
  "@context": "http://schema.org/",
  "@type": "Product",
  "name": "{{title}}",
   {{#each metas}}
    {{#ifEquals this.name "description"}}
            "description": "{{this.content}}",
        {{/ifEquals}}
{{/each}}
  "brand": {
    "@type": "Thing",
    "name": "Coding Blocks"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    {{#with reviews}}
    "ratingValue": "{{{ratingValue}}}",
    "ratingCount": "{{{ratingCount}}}",
    "reviewCount": "{{{reviewCount}}}"
    {{/with}}
  },
  {{#each coursesList}}
    {{#ifEquals this.id @root.id}}
   "image": "https://codingblocks.com{{imgSrc}}",
  "offers": {
    "@type": "Offer",
    "priceCurrency": "INR",
    {{#if price}}
        "price": "{{#removeComma this.price}}{{/removeComma}}",
        {{/if}}
    "seller": {
      "@type": "Organization",
      "name": "Coding Blocks"
    }
    {{/ifEquals}}
{{/each}}
    {{#each bootcampsList}}
        {{#ifEquals this.id @root.id}}
   "image": "https://codingblocks.com{{imgSrc}}",
  "offers": {
    "@type": "Offer",
    "priceCurrency": "INR",
    {{#if price}}
        "price": "{{#removeComma this.price}}{{/removeComma}}",
        {{/if}}
    "seller": {
      "@type": "Organization",
      "name": "Coding Blocks"
    }
    {{/ifEquals}}
    {{/each}}
  }
}
</script>
