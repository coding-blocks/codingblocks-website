<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{title}}</title>
    {{> meta}}
    {{> head}}
      <style>

        h4 {
            margin: 0;
        }

        .ssCard {
            background: white;
            border-radius: 20px;
            padding-top: 85px;
            padding-bottom: 20px;
            margin-bottom: 40px;
        }

        .ssImage {
            position: absolute;
            top: 0;
            width: 100%;
            z-index: 100;
        }

        .ssContainer {
            position: relative;
            padding-top: 75px;
        }

        .ssLogo {
            text-align: center;
            background: #F0F0F0;
            height: 60px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .ssData {
            text-align: center;
            padding-top: 20px;
        }

        .round-img {
            border-radius: 50%;
            border: 5px solid white;
            width: 150px;
            height: 150px;
        }

    </style>
</head>
<body class="scroll-assist">
{{> navbar}}
<div class="main-container">
    <!-- SECTION: Home hero slider-->
    <a id="home_hero_header" class="in-page-link"></a>
    <!--STORIES-->
    <!-- id should be passed through function call in button-->
    <!--STORIES END-->
    <section style="margin-bottom: 0px;">
        <div class="image-bg" style="margin-bottom: 0px;">
            <div class="background-image-holder" style="margin-bottom: 0px; height: 115%">
                <img alt="Bountiful Open Source Summer" class="background-image"
                     src="../assets/images/success-stories/wall.jpg">
            </div>
            <div class="container" style="margin-bottom: 0px;">
                <div class="row">
                    <div class="col-sm-6 text-center"
                         style="padding-left: 50px;vertical-align: middle;margin-top: 3%;margin-bottom: 3%;">
                        <h2 class="uppercase mb16" style="font-size: 50px;font-weight: 600;">Success Stories</h2>
                        <!--
                        <p class="lead mb64" style="font-weight: 500;font-size: 24px">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
                        </p>
                        -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- SECTION: Numbers-->
    {{> numbers}}
    <section style="background: #f8f8f8;">
        {{!-- <div class="row text-center" style="margin-bottom: 40px;">
            <h3 class="uppercase text-center">Success Stories</h3>
        </div> --}}
        <div class="highlight highlightOverlay" style="margin-bottom: 0px;">
            <div class="container">
                <div class="row text-center" style="margin-bottom: 40px;">
                    <h2 class="uppercase text-center">Success Stories</h2>
                </div>
                <div class="team row text-center">
                </div>
            </div>
        </div>
    </section>
    {{> map}}
    {{> footer}}
</div>
{{> scripts}}
<script>
    $('.storyButton').click(function () {
        let parent = '#' + $(this).closest("div").prop("id");
        console.log(parent);
        $(parent + ' .modal').modal("toggle");
    });

    $.ajax ({
        url: "http://localhost:3000/public_stories",
        type: "GET",
        success: function (stories) {
            console.log (stories)
            var container = $('.team')
            for (i in stories) {
              container.append(
                `

                <div class="ssContainer col-4 col-md-4 col-sm-6 col-xs-12">
                <div class="ssImage">
                <img class="round-img" src="${stories[i].photo}" >
                </div>
                <div id="story${stories[i].id}" class="ssCard">
                <div class="title mb0 text-center">
                <h4 class="uppercase mb0 bold">${stories[i].user.firstName} ${stories[i].user.lastName}</h4>
                <h5>${stories[i].coursesAttended}<br></h5>
                </div>
                <div class="ssLogo">
                <img src="http://logo.clearbit.com/steelbird.com" >
                </div>
                <div class="bold ssData">View Testimonial > </div>
                </div>
                </div>
 <div class="ssContainer col-4 col-md-4 col-sm-6 col-xs-12">
                <div class="ssImage">
                <img class="round-img" src="http://logo.clearbit.com/google.com" >
                </div>
                <div id="story${stories[i].id}" class="ssCard">
                <div class="title mb0 text-center">
                <h4 class="uppercase mb0 bold">${stories[i].user.firstName} ${stories[i].user.lastName}</h4>
                <h5>${stories[i].coursesAttended}<br></h5>
                </div>
                <div class="ssLogo">
                <img src="http://logo.clearbit.com/steelbird.com" >
                </div>
                <div class="bold ssData">View Testimonial > </div>
                </div>
                </div>
 <div class="ssContainer col-4 col-md-4 col-sm-6 col-xs-12">
                <div class="ssImage">
                <img class="round-img" src="http://logo.clearbit.com/google.com" >
                </div>
                <div id="story${stories[i].id}" class="ssCard">
                <div class="title mb0 text-center">
                <h4 class="uppercase mb0 bold">${stories[i].user.firstName} ${stories[i].user.lastName}</h4>
                <h5>${stories[i].coursesAttended}<br></h5>
                </div>
                <div class="ssLogo">
                <img src="http://logo.clearbit.com/steelbird.com" >
                </div>
                <div class="bold ssData">View Testimonial > </div>
                </div>
                </div>
                `
              )
            }
        }
    })
</script>
</body>
</html>
